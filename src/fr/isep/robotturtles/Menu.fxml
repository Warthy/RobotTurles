                        textAlignment="CENTER" onAction="#increase">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
        </HBox>
        <Button mnemonicParsing="false" styleClass="menu-button" text="Start">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
