      fx:controller="fr.isep.robotturtles.controller.MenuController">
    <children>
        <ImageView fitHeight="158.0" fitWidth="602.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@resources/images/menu-title.png"/>
            </image>
        </ImageView>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
