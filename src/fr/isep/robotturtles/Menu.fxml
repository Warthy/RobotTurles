<VBox id="menu" alignment="BASELINE_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="519.0" prefWidth="759.0" stylesheets="@resources/css/style.css"
